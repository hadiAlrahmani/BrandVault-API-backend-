{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "CHANGE-THIS-TO-A-LONG-RANDOM-SECRET-KEY-AT-LEAST-32-CHARS",
    "Issuer": "BrandVault",
    "Audience": "BrandVault",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "FileStorage": {
    "BasePath": "Uploads",
    "MaxFileSizeMB": 50,
    "AllowedExtensions": [".jpg", ".jpeg", ".png", ".gif", ".svg", ".pdf", ".ai", ".psd", ".fig", ".sketch", ".ttf", ".otf", ".woff", ".woff2"]
  }
}
